<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/header.ejs",{title:"Hiking Club"}) %>
</head>

<body>
    <!-- Mobile Navbar -->
    <%- include("../partials/nav.ejs") %>

        <!-- Header Image -->
        <header class="headerImg">
            <h1 class="headTitle">Hiking Club</h1>
        </header>

        <h2><strong>Upcoming Hikes</strong></h2>
        <%for (let i=0; i < hikes.length && i < 3; i++) { %>
            <!-- Hike Image  -->
            <a href="./hikes/<%= hikes[i].uuid%>" class="hikeImgCardLink">
            <div class="hikeImg">
                <img class="hikeImage" src="<%= hikes[i].imageUrl%>">
                <div class="hikeText">
                    <p class="hikeTitle"><strong>
                            <%= hikes[i].title%>
                        </strong></p>
                    <p class="hikeLoca">
                        <%= hikes[i].location%>
                    </p>
                    <p class="hikeDesc">
                        <%= hikes[i].description%>
                    </p>
                </div>
            </div>
            </a>
            <%}%>

                <!-- hikes image -->
                <div class="homeHikesImg">
                    <h4 class="subTitle">Check out all our hikes</h4>
                    <a class="joinBtn" href="/hikes">See hikes</a>
                </div>

                <!-- separator image -->
                <div class="sepImg">
                    <h4 class="subTitle">Let's hike together</h4>
                    <a class="joinBtn" href="/register">Join us</a>
                </div>

                <!-- News image -->
                <div class="newsFootImg">
                    <h4 class="subTitle">Hiking News</h4>
                    <a class="joinBtn" href="/news">Read here</a>
                </div>




                <!-- Footer -->
                <%- include("../partials/footer.ejs") %>




</body>

</html>