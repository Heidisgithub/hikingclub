<!DOCTYPE html>
<html lang="en">

<%- include("../partials/header", {title: "These are our hikes!"}) %>

    <body>
        <!-- Mobile Navbar -->
        <%- include("../partials/nav") %>

            <h1 class="pageH1">What we have to offer</h1>
            <% if(hikes){ %>
                <div class="infocardCollection">
                    <%for (let i= 0; i < hikes.length; i++) { %>
                        <a href="/hikes/<%= hikes[i].uuid %>" class="infocard">
                            <div class="infocardImageContainer">
                                <div class="cardGradient"></div>
                                <img src="<%= hikes[i].imageUrl %>" class="infocardImage">
                                <div class="infocardData">
                                    <% if(hikes[i].title){ %>
                                        <p>
                                            <%= hikes[i].title%>
                                        </p>
                                        <%}%>
                                            <% if(hikes[i].location){ %>
                                                <p>
                                                    <%= hikes[i].location %>
                                                </p>
                                                <%}%>
                                                    <% if(hikes[i].date){ %>
                                                        <p>
                                                            <%= hikes[i].date.toLocaleDateString('en-us', { weekday:"long", year:"numeric", month:"short", day:"numeric"}) %>
                                                        </p>
                                                        <%}%>
                                </div>
                            </div>
                        </a>
                        <%}%>
                </div>
                <%}%>



                    <!-- Footer -->
                    <%- include("../partials/footer") %>
    </body>

</html>